@model IEnumerable<LoanShark.ViewModel.MemberDisplayViewModel>

@{
    ViewBag.Title = "Member List";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Members</h1>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Member" asp-action="Create" class="btn btn-primary">
                <i class="fa fa-plus-circle"></i>&nbsp; Create New Member
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Member names
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">
                            <a asp-controller="Members" asp-route-Id="@obj.MemberId" asp-action="Profile">
                                @obj.FirstName @obj.MiddleName @obj.LastName
                            </a>
                        </td>
                        <td class="text-center">
                            <div class="w-10 btn-group" role="group">
                                <a asp-controller="Member" asp-route-Id="@obj.MemberId" asp-action="Edit" class="btn btn-info mx-2">
                                    <i class="far fa-edit"></i>
                                </a>
                                <a asp-controller="Member" asp-route-Id="@obj.MemberId" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="far fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No list of members.</p>
    }

</div>